{
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.fixAll.tslint": true,
        "source.fixAll.stylelint": true
    },
    "eslint.enable": true,
    "eslint.alwaysShowStatus": true,
    "eslint.options": {
      "extensions": [".html", ".js", ".ts", ".vue", ".tsx", ".jsx"]
    }
}